@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h2 class="card-title">Sliders</h2>
                  <a class="btn btn-lg btn-info" asp-action="Add">Add Slider</a>
                  <div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>  
                            #
                          </th>
                          <th>
                            Image
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var slider in Model)
                         {
                             <tr>
                              <td>
                                @count
                              </td>
                              <td>
                                <img src="~/img/@slider.Url" \>
                              </td>
                              <td>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@slider.Id">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                                <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@slider.Id">
                                    <i class="mdi mdi-grease-pencil"></i>
                                </a>
                              </td>
                                </tr>
                                count++;
                            }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
           </div>

